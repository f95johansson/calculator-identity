<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Styles for different orientations -->
    <style name="history_align">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_toLeftOf">@+id/keypad</item>
    </style>
    <style name="key_pad_align">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="menu_button_alignment" parent="@style/Widget.AppCompat.Button.Borderless" >
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_toLeftOf">@+id/keypad</item>
    </style>

    <!-- Styles for different sizes -->
    <style name="num_pad_padding">
        <item name="android:paddingRight">16dp</item>
    </style>
    <style name="extended_pad_padding">
        <item name="android:paddingRight">16dp</item>
    </style>
</resources>